<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:gravity="center">

        <!-- 顶部信息栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/difficulty_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中等"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/error_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="错误0/3"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/star_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="☆0"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/timer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:58"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_weight="1"/>
        </LinearLayout>

        <!-- 数独网格容器 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="16dp">

            <GridLayout
                android:id="@+id/sudoku_grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="9"
                android:columnCount="9"
                android:background="#000000"
                android:padding="2dp"/>
        </FrameLayout>

        <!-- 数字选择按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">
            <Button
                android:id="@+id/btn_1"
                android:text="1"
                style="@style/SudokuNumberButton"/>

            <Button
                android:id="@+id/btn_2"
                android:text="2"
                style="@style/SudokuNumberButton"/>

            <Button
                android:id="@+id/btn_3"
                android:text="3"
                style="@style/SudokuNumberButton"/>

            <Button
                android:id="@+id/btn_4"
                android:text="4"
                style="@style/SudokuNumberButton"/>

            <Button
                android:id="@+id/btn_5"
                android:text="5"
                style="@style/SudokuNumberButton"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">
            <Button
                android:id="@+id/btn_6"
                android:text="6"
                style="@style/SudokuNumberButton"/>

            <Button
                android:id="@+id/btn_7"
                android:text="7"
                style="@style/SudokuNumberButton"/>

            <Button
                android:id="@+id/btn_8"
                android:text="8"
                style="@style/SudokuNumberButton"/>

            <Button
                android:id="@+id/btn_9"
                android:text="9"
                style="@style/SudokuNumberButton"/>
        </LinearLayout>

        <!-- 替换原来的笔记模式按钮部分 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <ToggleButton
                android:id="@+id/btn_note_toggle"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:textOn="笔记模式:开"
                android:textOff="笔记模式:关"
                android:textSize="16sp"
                android:background="@drawable/toggle_button_selector"/>
            <Button
                android:id="@+id/btn_single_hint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="提示 (3)"
                android:textSize="16sp" />
            <Button
                android:id="@+id/btn_difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="难度选择"
                android:layout_margin="8dp"/>
        </LinearLayout>

        <!-- 功能按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_hint"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="作弊"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/btn_hint_close"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="作弊关闭"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/btn_return"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="返回主界面"
                android:textSize="16sp"
                android:backgroundTint="#FF5722"/>
            <Button
                android:id="@+id/btn_save_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存游戏"
                android:layout_margin="8dp"/>
        </LinearLayout>
<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:orientation="horizontal">-->
<!--            -->
<!--        </LinearLayout>-->
    </LinearLayout>
</ScrollView>