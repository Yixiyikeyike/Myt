<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center">
        <Button
            android:id="@+id/btn_1"
            android:text="1"
            style="@style/SudokuNumberButton"/>

        <Button
            android:id="@+id/btn_2"
            android:text="2"
            style="@style/SudokuNumberButton"/>

        <Button
            android:id="@+id/btn_3"
            android:text="3"
            style="@style/SudokuNumberButton"/>

        <Button
            android:id="@+id/btn_4"
            android:text="4"
            style="@style/SudokuNumberButton"/>

        <Button
            android:id="@+id/btn_5"
            android:text="5"
            style="@style/SudokuNumberButton"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center">
        <Button
            android:id="@+id/btn_6"
            android:text="6"
            style="@style/SudokuNumberButton"/>

        <Button
            android:id="@+id/btn_7"
            android:text="7"
            style="@style/SudokuNumberButton"/>

        <Button
            android:id="@+id/btn_8"
            android:text="8"
            style="@style/SudokuNumberButton"/>

        <Button
            android:id="@+id/btn_9"
            android:text="9"
            style="@style/SudokuNumberButton"/>

    </LinearLayout>


</LinearLayout>