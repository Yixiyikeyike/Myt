<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 状态信息区域 -->
        <TextView
            android:id="@+id/status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="等待连接..."
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- 连接信息区域 -->
        <TextView
            android:id="@+id/tv_my_ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/et_target_ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入目标IP地址"
            android:inputType="text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_connect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="连接"/>

            <Button
                android:id="@+id/btn_host_game"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="创建游戏"/>
        </LinearLayout>

        <!-- 游戏信息显示区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F0F0F0"
            android:padding="8dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="游戏信息"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_game_seed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="随机种子: 未生成"/>

            <TextView
                android:id="@+id/tv_my_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的进度: 0/81"/>

            <TextView
                android:id="@+id/tv_opponent_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="对方进度: 0/81"/>

            <!-- 错误计数区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/error_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="你: 0/3"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/opponent_error_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="对手: 0/3"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- 星星计数区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tv_my_stars"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="我的星星: ☆3"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_opponent_stars"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="对方星星: ☆3"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 计时器显示 -->
        <TextView
            android:id="@+id/timer_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- 聊天区域 -->
        <TextView
            android:id="@+id/tv_chat"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#E0E0E0"
            android:scrollbars="vertical"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/et_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入消息"
            android:inputType="text"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btn_send_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发送"
            android:layout_marginBottom="16dp"/>

        <!-- 游戏控制按钮 -->
        <Button
            android:id="@+id/btn_start_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开始游戏"
            android:layout_marginBottom="16dp"/>

        <!-- 数独游戏区域  -->
        <!-- 数独网格 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_weight="1"
            android:paddingHorizontal="16dp">

            <GridLayout
                android:id="@+id/sudoku_grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="9"
                android:columnCount="9"
                android:background="#000000"
                android:padding="2dp"/>
        </FrameLayout>

        <!-- 数字选择按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">
            <Button
                android:id="@+id/btn_1"
                android:text="1"
                style="@style/SudokuNumberButton"/>

            <Button
                android:id="@+id/btn_2"
                android:text="2"
                style="@style/SudokuNumberButton"/>

            <Button
                android:id="@+id/btn_3"
                android:text="3"
                style="@style/SudokuNumberButton"/>

            <Button
                android:id="@+id/btn_4"
                android:text="4"
                style="@style/SudokuNumberButton"/>

            <Button
                android:id="@+id/btn_5"
                android:text="5"
                style="@style/SudokuNumberButton"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">
            <Button
                android:id="@+id/btn_6"
                android:text="6"
                style="@style/SudokuNumberButton"/>

            <Button
                android:id="@+id/btn_7"
                android:text="7"
                style="@style/SudokuNumberButton"/>

            <Button
                android:id="@+id/btn_8"
                android:text="8"
                style="@style/SudokuNumberButton"/>

            <Button
                android:id="@+id/btn_9"
                android:text="9"
                style="@style/SudokuNumberButton"/>

        </LinearLayout>

        <!-- 功能按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btn_hint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="提示"/>

            <Button
                android:id="@+id/btn_hint_close"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="关闭提示"/>

            <Button
                android:id="@+id/btn_return"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="返回"/>
            <ToggleButton
                android:id="@+id/btn_note_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="笔记模式"
                android:textOn="笔记模式"
                android:checked="false"/>
            <Button
                android:id="@+id/btn_single_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提示 (3)"
                android:layout_margin="5dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>